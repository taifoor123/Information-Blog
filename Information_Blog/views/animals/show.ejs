<%-include('../partials/header.ejs')%>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="lead"> Complaints </div>
            <ul class="list-group">
                <li class="list-group-item active">Cras justo odio</li>
                <li class="list-group-item">Dapibus ac facilisis in</li>
                <li class="list-group-item">Morbi leo risus</li>
            </ul>
        </div>
        <div class="col-9-md">
            <div class="card" style="width: 700px;">
                <img src="<%=abc.image%>" class="card-img-top" alt="..." style="width: 700px; height: 400px;">
                <div class="card-body">
                    <h5 class="card-title text-left" ><a href="#"><%=abc.name%></a></h5>
                    <p class="card-text "><%=abc.description%></p>
                    <p><em>Submitted By </em><%=abc.author.username%> </p>
                    <%if(currentUser && abc.author.id.equals(currentUser._id)){%> 
                    <a id="edit" class="btn btn-warning" href="/animals/<%=abc._id%>/edit ">Edit</a>
                    <form id="delete" action="/animals/<%=abc._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                    </form>
                    <% } %> 
                </div>
            </div>
            <div class="card card-body bg-light">
                <div class="ml-auto"><a href="/animals/<%=abc._id%>/comments/new" class="btn btn-success">Add
                        Comment</a></div>
                        <hr>
                <%abc.comments.forEach(function(ddaa){%>
                <div class="row">
                    <div class="col-12-md">
                        <strong> <%= ddaa.author.username %> </strong>
                        <p class="a"><%= ddaa.content %> </p>
                    <%if(currentUser && ddaa.author.id.equals(currentUser._id)){%> 
                        <a id="edit"class="btn btn-warning btn-sm" href="/animals/<%= abc._id %>/comments/<%= ddaa._id %>/edit ">Edit</a>
                        <form id="delete" action="/animals/<%= abc._id %>/comments/<%= ddaa._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger btn-sm">Delete</button>
                            </form>
                            <% } %> 
                    </div>
                </div>
                <%})%>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>